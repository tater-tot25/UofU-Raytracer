    <material type="microfacet" name="plastic">
      <color r="1.0" g="0.4" b="0.7"/>
      <roughness value = "0.8"/>
      <metallic value = "0.0"/>
      <ior value = "1.5"/>
    </material>
    <material type="microfacet" name="gold">
      <color r = "1" g = "0.7" b = "0.2"/>
      <roughness value = "0.4"/>
